source 'https://rubygems.org'

gem 'rails'

group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'therubyracer', :platforms => :ruby
  gem 'uglifier'
end

gem 'jquery-rails'

group :development, :test do
  gem 'mysql2'
  gem 'rspec-rails'
  gem 'guard'
  gem 'guard-rails'
  gem 'guard-rspec'
  gem 'simplecov'
  gem 'rb-inotify'
  gem 'capybara'
  gem 'factory_girl'
end

gem 'pg'